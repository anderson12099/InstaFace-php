{% extends 'base.html.twig' %}

{% block title %}Imagen index{% endblock %}

{% block body %}
    <h1>Imagen index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Foto</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for imagen in imagens %}
            <tr>
                <td>{{ imagen.id }}</td>
                <td>{{ imagen.nombre }}</td>
                <td>{{ imagen.descripcion }}</td>
                <td>{{ imagen.foto }}</td>
                <td>{{ imagen.createdAt ? imagen.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('imagen_show', {'id': imagen.id}) }}">show</a>
                    <a href="{{ path('imagen_edit', {'id': imagen.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('imagen_new') }}">Create new</a>
{% endblock %}
